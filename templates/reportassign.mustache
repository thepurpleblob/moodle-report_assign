<h2>"{{ assignment.name }}"</h2>

{{# groupselect }}
<div class="card text-white bg-primary">
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="groupfilter" class="col-form-label-lg">{{# str }}group, report_assign{{/ str }}</label>
                <select class="form-control col-sm-3" id="groupfilter" name="groupfilter">
                    <option value="0">{{# str }}all{{/ str }}</option>
                    {{# groups }}
                        <option value="{{ id }}">{{ name }}</option>
                    {{/ groups }}
                </select>
            </div>
        </form>
    </div>
</div>
{{/ groupselect }}

<table class="table table-striped">
    <thead>
        <th>{{# str }}name{{/ str }}</th>
        {{# profilefields }}
            <th>{{{ . }}}</th>
        {{/ profilefields }}
        {{# submissionfields }}
            <th>{{{ . }}}</th>
        {{/ submissionfields }}
        {{# groupselect }}
            <th>{{# str }}groups{{/ str }}</th>
        {{/ groupselect }}
        {{# urkundenabled }}
            <th>{{# str }}urkund, report_assign{{/ str }}</th>
        {{/ urkundenabled }}
        {{# turnitinenabled }}
            <th>{{# str }}turnitin, report_assign{{/ str }}</th>
        {{/ turnitinenabled }}
        {{# assignment.markingallocation }}
            <th>{{# str }}workflow, report_assign{{/ str }}</th>
            <th>{{# str }}allocatedmarker, report_assign{{/ str }}</th>
        {{/ assignment.markingallocation }}
    </thead>
    <tbody>
        {{# submissions }}
            <tr class="group_0 {{# groupids }}group_{{ . }} {{/ groupids}}">
                <td>{{ fullname }}</td>
                {{# profilefieldsenabled }}
                    {{# profiledata }}
                        <td>{{ . }}</td>
                    {{/ profiledata }}
                {{/ profilefieldsenabled }}
                {{# groupselect }}
                    <td>{{ groups }}</td>
                {{/ groupselect }}
                {{# submissionfieldsenabled }}
                    {{# submissiondata }}
                        <td>{{ . }}</td>
                    {{/ submissiondata }}
                {{/ submissionfieldsenabled }}
                {{# urkundenabled }}
                    <td>
                        {{# urkund }}
                            {{# pix }}urkund, report_assign, {{# str }}urkund, report_assign{{/ str }}{{/ pix }}{{ urkund.similarityscore }}
                        {{/ urkund }}
                    </td>
                {{/ urkundenabled }}
                {{# turnitinenabled }}
                    <td>
                        {{# turnitin }}
                            {{# pix }}turnitin, report_assign, {{# str }}turnitin, report_assign{{/ str }}{{/ pix }}{{ turnitin.similarityscore }}
                        {{/ turnitin }}
                    </td>
                {{/ turnitinenabled }}
                {{# assignment.markingallocation }}
                    <td>{{ workflow }}</td>
                    <td>{{ marker }}</td>
                {{/ assignment.markingallocation }}
            </tr>
        {{/ submissions }}
    <tbody>
</table>

<div>
    <a href="{{{ backurl }}}" class="btn btn-primary">{{# str }}back{{/ str }}</a>
</div>
